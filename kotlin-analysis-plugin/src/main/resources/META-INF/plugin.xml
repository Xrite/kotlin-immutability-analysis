<idea-plugin>
    <id>org.jetbrains.research.ml.kotlinAnalysis</id>
    <name>Kotlin Analysis</name>
    <vendor>JetBrains Research</vendor>

    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.intellij.groovy</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinClonesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinDependenciesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinRangesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.ProjectsTaggingRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinGradleDependenciesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinGradleDependenciesByModulesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinGradlePropertiesAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinGradlePluginsAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinProjectMetricsAnalysisAnalysisRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.kotlinAnalysis.KotlinImmutabilityAnalysisRunner"/>
    </extensions>

</idea-plugin>